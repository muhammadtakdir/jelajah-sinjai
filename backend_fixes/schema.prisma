// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  suiAddress    String?  @unique // Alamat dompet Sui dari zkLogin
  nama          String?
  googleSub     String?  @unique // ID unik dari Google
  salt          String?  // Salt zkLogin yang di-generate backend
  totalCheckIn  Int      @default(0)
  createdAt     DateTime @default(now())
  checkIns      CheckIn[] // Relasi: 1 User bisa banyak check-in
  
  // SOSIAL
  locationLikes LocationLike[]
  comments      Comment[]
  checkInLikes  CheckInLike[]

  // KEPEMILIKAN
  ownedLocations LokasiWisata[] @relation("LocationOwner")
  claimRequests  ClaimRequest[]
}

model LokasiWisata {
  id          Int      @id @default(autoincrement())
  nama        String
  kategori    String   // Misalnya: Wisata Alam, Kuliner, Penginapan
  deskripsi   String?
  latitude    Float    // Koordinat untuk peta
  longitude   Float    
  isVerified  Boolean  @default(false) // Untuk persetujuan Admin

  // FIELD BARU: Menyimpan URL foto utama tempat wisata
  fotoUtama   String?
  
  // TAMBAHAN: Untuk mencatat siapa yang mengusulkan
  suiAddress  String?

  createdAt   DateTime @default(now())
  checkIns    CheckIn[] 
  
  // SOSIAL
  likes       LocationLike[]
  comments    Comment[]

  // KEPEMILIKAN
  ownerId     Int?     // User ID yang memiliki tempat ini
  owner       User?    @relation("LocationOwner", fields: [ownerId], references: [id])
  claimRequests ClaimRequest[]
}

// Tabel Baru untuk mencatat riwayat kunjungan
model CheckIn {
  id          Int          @id @default(autoincrement())
  userId      Int
  lokasiId    Int

  // FIELD BARU: User bisa meninggalkan ulasan dan foto bukti kunjungan
  komentar    String?      // Teks komentar/review
  fotoUser    String?      // URL foto yang diunggah user

  waktu       DateTime     @default(now())
  isHidden    Boolean      @default(false)
  
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  lokasi      LokasiWisata @relation(fields: [lokasiId], references: [id], onDelete: Cascade)
  
  // SOSIAL
  likes       CheckInLike[]
}

model LocationLike {
  id        Int          @id @default(autoincrement())
  userId    Int
  lokasiId  Int
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  lokasi    LokasiWisata @relation(fields: [lokasiId], references: [id], onDelete: Cascade)
  @@unique([userId, lokasiId])
}

model Comment {
  id        Int          @id @default(autoincrement())
  userId    Int
  lokasiId  Int
  text      String
  waktu     DateTime     @default(now())
  isHidden  Boolean      @default(false)
  
  // Relasi Balasan (Self-relation)
  parentId  Int?
  parent    Comment?     @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[]    @relation("CommentReplies")

  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  lokasi    LokasiWisata @relation(fields: [lokasiId], references: [id], onDelete: Cascade)
}

model CheckInLike {
  id        Int      @id @default(autoincrement())
  userId    Int
  checkInId Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  checkIn   CheckIn  @relation(fields: [checkInId], references: [id], onDelete: Cascade)
  @@unique([userId, checkInId])
}

model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  message   String
  type      String   @default("info") // info, event, promo
  createdAt DateTime @default(now())
  
  // Untuk tracking siapa yang sudah baca (Opsional, untuk simplifikasi kita buat global dulu)
  // readBy User[] 
}

model ClaimRequest {
  id        Int          @id @default(autoincrement())
  userId    Int
  lokasiId  Int
  status    String       @default("pending") // pending, approved, rejected
  createdAt DateTime     @default(now())
  
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  lokasi    LokasiWisata @relation(fields: [lokasiId], references: [id], onDelete: Cascade)
}
